@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
    var returnUrl = User.IsInRole("Admin") ? Url.Action("AdminDashboard", "Admin") : Url.Action("MainPage", "BanHang");
}
<link href="~/css/miain.css" rel="stylesheet" />

<div class="container text-center mt-5">
    <h2 class="text-danger">@ViewData["Title"]</h2>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <p class="lead">Bạn có muốn đăng xuất không?</p>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="btn btn-danger btn-lg">Đăng xuất</button>
        </form>

        <!-- Nút quay lại -->
        <a href="@returnUrl" class="btn btn-secondary mt-3">Trở lại</a>
    }
    else
    {
        <div class="alert alert-success mt-4" role="alert">
            Bạn đã đăng xuất khỏi hệ thống thành công.
        </div>

        <!-- Nút quay lại -->
        <a href="@returnUrl" class="btn btn-secondary mt-3">Trở lại</a>
    }
</div>
