@page
@model LoginModel
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
</head>


<body style="background-image: url('@Url.Content("~/images/03.jpg")');">
    <div class="welcome-banner">
        Chợ đồ cũ sinh viên
    </div>
    <div class="neumorphic neumorphic-card">
        <h1>Đăng nhập</h1>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group">
                <input asp-for="Input.Email" class="neumorphic neumorphic-input" autocomplete="username" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.Password" type="password" class="neumorphic neumorphic-input" autocomplete="current-password" placeholder="Mật khẩu" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button type="submit" class="neumorphic neumorphic-button">Đăng nhập</button>

            <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký tài khoản mới</a>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


</body>
