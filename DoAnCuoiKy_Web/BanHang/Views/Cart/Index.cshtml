<div class="hero-wrap hero-bread" style="background-image:url('@Url.Content("~/images/bg_1.jpg")')">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="/">Trang chủ</a></span> <span>Giỏ hàng</span></p>
                <h1 class="mb-0 bread">Giỏ hàng của tôi</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-cart">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="row">
                <div class="col-md-12 ftco-animate">
                    <div class="cart-list">
                        <table class="table">
                            <thead class="thead-primary">
                                <tr class="text-center">
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td class="product-remove">
                                            <a asp-action="Delete" asp-route-cartItemId="@item.Id" asp-route-userId="@User.Identity.Name">
                                                <span class="ion-ios-close"></span>
                                            </a>
                                        </td>

                                        <td class="image-prod">
                                            <div class="img" style="background-image:url('@Url.Content($"~/images/{item.Product.ImageUrl}")');"></div>
                                        </td>

                                        <td class="product-name">
                                            <h3>@item.Product.Name</h3>
                                            <p>@item.Product.Description</p>
                                        </td>

                                        <td class="price">@item.Product.Price.ToString("C", new CultureInfo("vi-VN"))</td>

                                        <td class="quantity">
                                            <form asp-action="Edit" asp-route-cartItemId="@item.Id" asp-route-userId="@User.Identity.Name" method="post">
                                                <div class="input-group mb-3">
                                                    <input type="number" name="quantity" class="quantity form-control input-number" value="@item.Quantity" min="1" max="100">
                                                    <div class="input-group-append">
                                                        <button type="submit" class="btn btn-outline-secondary">Cập nhật</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </td>

                                        <td class="total">@(item.Product.Price * item.Quantity)đ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="col-lg-4 mt-5 cart-wrap ftco-animate">
                    <div class="cart-total mb-3">
                        <h3>Tổng giỏ hàng</h3>
                        <p class="d-flex">
                            <span>Tạm tính</span>
                            <span>@Model.Sum(i => i.Product.Price * i.Quantity).ToString("C", new CultureInfo("vi-VN"))</span>
                        </p>
                        <p class="d-flex">
                            <span>Phí vận chuyển</span>
                            <span>0₫</span>
                        </p>
                        <p class="d-flex">
                            <span>Giảm giá</span>
                            <span>3₫</span>
                        </p>
                        <hr>
                        <p class="d-flex total-price">
                            <span>Tổng cộng</span>
                            <span>@(Model.Sum(i => i.Product.Price * i.Quantity) - 3)đ</span>
                        </p>
                    </div>
                    <p><a asp-controller="Checkout" asp-action="Index" class="btn btn-primary py-3 px-4">Tiến hành thanh toán</a></p>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12 text-center">
                    <h3>Giỏ hàng của bạn đang trống!</h3>
                    <p><a href="/" class="btn btn-primary py-3 px-4">Mua hàng ngay</a></p>
                </div>
            </div>
        }
    </div>
</section>


