@model BanHang.Models.Order


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Vegefoods - Free Bootstrap 4 Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/open-iconic-bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/animate.css" asp-append-version="true">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/magnific-popup.css" asp-append-version="true">

    <link rel="stylesheet" href="~/css/aos.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/ionicons.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/jquery.timepicker.css" asp-append-version="true">

    <link rel="stylesheet" href="~/css/flaticon.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/icomoon.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link href="~/css/ctdh.css" rel="stylesheet" />

</head>
<body class="goto-here">
    

    <h2>Chi tiết Đơn hàng</h2>
    <p><strong>Khách hàng:</strong> @(Model.User != null ? Model.User.UserName : "Không xác định")</p>
    <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Tổng tiền:</strong> @Model.TotalPrice.ToString("C")</p>
    <p><strong>Trạng thái:</strong> @Model.Status</p>

    <form action="/Admin/UpdateStatus" method="post" class="d-flex align-items-center gap-2">
        <input type="hidden" name="id" value="@Model.Id" />

        <label for="orderStatus" class="fw-bold me-2">Cập nhật trạng thái:</label>
        <select name="status" id="orderStatus" class="form-select w-auto">
            <option value="Chờ xác nhận" selected="@(Model.Status == "Chờ xác nhận" ? "selected" : null)">Chờ xác nhận</option>
            <option value="Đang xử lý" selected="@(Model.Status == "Đang xử lý" ? "selected" : null)">Đang xử lý</option>
            <option value="Hoàn thành" selected="@(Model.Status == "Hoàn thành" ? "selected" : null)">Hoàn thành</option>
            <option value="Đã hủy" selected="@(Model.Status == "Đã hủy" ? "selected" : null)">Đã hủy</option>
        </select>

        <div class="ms-auto">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a href="/Admin/Orders" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </form>

    <h3>Sản phẩm trong đơn hàng:</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@(item.Product != null ? item.Product.Name : "Sản phẩm không xác định")</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


    <script src="js/jquery.min.js"></script>
    <script src="js/jquery-migrate-3.0.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.easing.1.3.js"></script>
    <script src="js/jquery.waypoints.min.js"></script>
    <script src="js/jquery.stellar.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/aos.js"></script>
    <script src="js/jquery.animateNumber.min.js"></script>
    <script src="js/bootstrap-datepicker.js"></script>
    <script src="js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="js/google-map.js"></script>
    <script src="js/main.js"></script>


</body>
</html>